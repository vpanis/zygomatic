
      <div class="carousel slide multi-item-carousel" id="theCarousel">
        <div class="carousel-inner">
          <div class="item active">
            <div class="col-xs-4">
              <div class="row__inner">
                <div class="tile">
                  <div class="tile__media">
                    <% skit = @recommended_skits.first %>
                    <%= cl_image_tag skit.picture.path, height: 140, width: 250, crop: :scale, class: "title__img" %>
                  </div>
                  <div class="tile__details">
                    <div class="tile__title">
                      <h6><%= skit.name %></h6>
                    </div>
                    <div class="tile__artist">
                      <h5><%= skit.comedian.name %> ~ <span style="font-size: 14px;"><em><%= skit.duration %></em></span></h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <% @recommended_skits[1..-1].each do |skit| %>
            <div class="item">
              <div class="col-xs-4">
                <div class="row__inner">
                  <div class="tile">
                    <div class="tile__media">

                      <%= cl_image_tag skit.picture.path, class: "tile__img" %>
                    </div>
                    <div class="tile__details">
                      <div class="tile__title">
                        <h6><%= skit.name %></h6>
                      </div>
                      <div class="tile__artist">
                        <h5><%= skit.comedian.name %> ~ <span style="font-size: 14px;"><em><%= skit.duration %></em></span></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <a class="left carousel-control left-control-override" href="#theCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
        <a class="right carousel-control right-control-override" href="#theCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>

    </div>
