<h2 class="text-center">Sketches :</h2>
<% if @skits.blank? %>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-6 col-md-offset-3">
				<h4 class="text-center">Désolé, aucun sketch ne correspond à votre recherche <%= params[:search] %></h4>
			</div>
		</div>
	</div>
<% else %>
	<div class="container">
		<div class="row">
			<% @skits.each do |skit| %>
				<div class="col-xs-12 col-md-4">	
					<%= render 'pages/shared/card', skit: skit %>
				</div>
			<% end %>
		</div>
	</div>		
<% end %>

