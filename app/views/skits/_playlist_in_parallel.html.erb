<div id="playlist-in-skit-show">
  <div class="row">
    <div class="col-xs-12">
      <div class=" text-center playlist-global-btn btn">
        <i class="fa fa-play-circle" aria-hidden="true" style='color: white; font-size: 40px'></i>
        <b> Lancer la playlist <span id="playlist-title"></span></b>
      </div>


      <ul id="sortable">
      </ul>
    </div>
    <div class="col-xs-4"></div>
  </div>
</div>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        $( "#sortable" ).sortable();
        $( "#sortable" ).disableSelection();
      });
    <% end %>
   <% end %>
