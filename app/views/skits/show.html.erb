<div class="showpage">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-8">
        <div class="left-content">
          <!-- VIDEO PLAYER -->
          <div class="row">
            <div class="col-xs-12">
              <!-- video player -->
              <div class="embed-player">
                <div id="large-player" class='player'></div>
              </div>
              <!-- end -->
            </div>
          </div>
          <!-- SUBVIDEO INFOS -->
          <div class="row">
            <div class="col-xs-12">
              <ul class="list-inline">
                <div class="subvideobar">
                  <!-- average rating -->
                  <li>
                    <h4 id="overall_rating">Note globale : <span style="color: $brand-yellow;"><%= "â˜…" * @skit_rating_average %></span></h4>
                  </li>
                  <!-- # of comments and link to them -->
                  <li>
                    <h4><%= link_to @skit.reviews.length.to_s + " Commentaires", skit_path(@skit, anchor: "reviews") %></h4>
                  </li>
                  <!-- Add a review -->
                  <li>
                    <!-- modal for review -->
                    <div class="rate">
                      <%= link_to "#modalReview_" + @skit.id.to_s, data: {toggle: "modal"} do %>
                        <ul class="list-inline">
                          <li><i class="fa fa-smile-o"></i></li>
                          <li><h4>Evaluez-moi !</h4></li>
                        </ul>
                      <% end %>
                    </div>

                    <div class="modal fade" id="modalReview_<%= @skit.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Review this skit performed by <%= @skit.comedian.name %></h4>
                          </div>
                          <%= render "review_form", skit: @skit, review: @review %>
                        </div>
                      </div>
                    </div>
                    <!-- end -->
                  </li>
                </div>
              </ul>
            </div>
          </div>
          <!-- NEXT SKITS OF PLAYLIST -->
          <div class="row">
            <div class="col-xs-12">
              <!-- carrousel of the playlist -->
              <div class="head-title-box">
                <h2>Les sketches de votre playlist</h2>
              </div>
              <%= render "pages/shared/showcard" %>
            </div>
          </div>
          <!-- RECOMMENDATIONS -->
          <div class="row">
            <div class="col-xs-12">
              <!-- carrousel of the playlist -->
              <div class="head-title-box">
                <h2>Nos recommandations pour vous</h2>
              </div>
              <% @recommended_skits.each do |skit| %>
                <div class="col-xs-12 col-md-4">
                  <%= render 'pages/shared/card', skit: skit %>
                </div>
              <% end %>
            </div>
          </div>
          <!-- REVIEWS -->
          <div class="row">
            <div class="col-xs-12">
              <div id="reviews">
                <h2 class="head-title-box">Reviews</h2>
                <% @skit.reviews.each do |review| %>
                  <%= render "reviews/show", review: review %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <!-- QUIZZ CARD -->

        <!-- FLOATING MINIATURE VIDEO PLAYER -->
        <div class="right-content">
          <div id="miniature-player" class='player'></div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- script pour player youtube -->
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    <%= render 'player.js' %>
  <% end %>
<% end %>
